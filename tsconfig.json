{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "tsbuild",
    "sourceMap": false,
    // TSはECMAScript 5に変換
    "target": "es6",
    // TSのモジュールはES Modulesとして出力
    "module": "es2015",
    // JSXの書式を有効に設定
    "jsx": "react",
    "alwaysStrict": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ]
  }
}